---
const company = {
  name: 'TCT Infotech',
  slogan: "Make IT effortless—so growth isn't optional.",
  description: 'Dependable, cutting-edge IT support that keeps you secure, online, and scaling.',
  contactEmail: 'Info@tctinfotech.com',
};

const ready = {
  heading: 'Ready to make IT easy?',
  subcopy: "Let's map a plan that fits your goals and budget.",
  cta: { label: 'Contact us', href: `mailto:${company.contactEmail}` },
};

// Footer link sections: flexible array so new sections can be added in frontmatter
const footerLinks = [
  {
    section: 'Services',
    links: [
      { title: 'IT Consulting', url: '#services' },
      { title: 'Technical Support', url: '#services' },
      { title: 'Networking', url: '#services' },
      { title: 'Cybersecurity', url: '#services' },
    ],
  },
  {
    section: 'Solutions',
    links: [
      { title: 'Cloud Services', url: '#services' },
      { title: 'Backup & Recovery', url: '#services' },
      { title: 'VoIP Systems', url: '#services' },
      { title: 'Get Quote', url: `mailto:${company.contactEmail}` },
    ],
  },
];

const legal = [
  { title: 'Privacy Policy', url: '$' },
  { title: 'Terms of Service', url: '$' },
  { title: 'Cookies', url: '$' },
];
---

<footer class="py-16 px-6 border-t border-white/10">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <div class="md:col-span-2">
        <div class="flex items-center space-x-3 mb-4"><span class="text-2xl font-bold">{company.name}</span></div>
        <p class="text-gray-400 mb-6 max-w-md">{company.slogan} {company.description}</p>
        <div class="mb-6">
          <h4 class="font-semibold mb-3">{ready.heading}</h4>
          <p class="text-gray-400 text-sm mb-4">{ready.subcopy}</p>
          <a href={ready.cta.href} class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium transition-colors"> <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89c.39.39 1.02.39 1.41 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>{company.contactEmail}</a>
        </div>
      </div>

      {footerLinks.map((section) => (
        <div>
          <h3 class="font-semibold mb-4">{section.section}</h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li><a href={link.url} class="text-gray-400 hover:text-white transition-colors">{link.title}</a></li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    <div class="pt-8 border-t border-white/10">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-gray-400 mb-4 md:mb-0">© {new Date().getFullYear()} {company.name}. All rights reserved.</div>
  <div class="flex space-x-6">{legal.map((l) => (<a href={l.url} class="text-gray-400 hover:text-white transition-colors text-sm">{l.title}</a>))}</div>
      </div>
    </div>
  </div>
</footer>
