---
const heading = "Services that drive";
const headingEm = "outcomes";
const subcopy =
  "From strategic IT consulting to 24/7 monitoring, we deliver comprehensive technology solutions that keep your business running smoothly.";
const services = [
  {
    title: "IT Consulting",
    desc: "Make smart technology decisions with confidence. We assess your current environment, identify gaps, and craft a tailored IT strategy.",
    outcome: "Outcomes: lower risk, clearer roadmaps, better ROI",
    colorFrom: "from-blue-500",
    colorTo: "to-blue-600",
    icon: "consulting",
    outcomeColor: "text-blue-400",
    details:
      "We perform architecture reviews, roadmap planning, and vendor assessments. Deliverables include prioritized recommendations, cost/benefit analysis, and an implementation timeline tailored to your business goals.",
  },
  {
    title: "Technical Support",
    desc: "Fast, reliable help that keeps people productive. From hardware and software troubleshooting to connectivity issues.",
    outcome: "Outcomes: less downtime, happier teams",
    colorFrom: "from-green-500",
    colorTo: "to-green-600",
    icon: "support",
    outcomeColor: "text-green-400",
    details:
      "Tiered support options (remote, onsite, SLA-backed) with ticketing, knowledge-base integration, and proactive maintenance to prevent recurring issues.",
  },
  {
    title: "Networking",
    desc: "Robust, secure wired and wireless networks built for performance and scale. We design, install, and maintain your network backbone.",
    outcome: "Outcomes: faster systems, stable uptime",
    colorFrom: "from-purple-500",
    colorTo: "to-purple-600",
    icon: "network",
    outcomeColor: "text-purple-400",
    details:
      "Network design includes capacity planning, QoS, VLAN segmentation, firewall policies, and monitoring. We provide documentation and runbooks for ongoing operations.",
  },
  {
    title: "Business Continuity, Backup & Recovery",
    desc: "Be ready for anything. We implement and manage dependable backup and disaster recovery to protect data and minimize downtime.",
    outcome: "Outcomes: resilience, data integrity",
    colorFrom: "from-orange-500",
    colorTo: "to-orange-600",
    icon: "backup",
    outcomeColor: "text-orange-400",
    details:
      "Solutions include automated backups, offsite replication, RTO/RPO planning, periodic recovery testing, and managed failover procedures.",
  },
  {
    title: "Phone Systems (VoIP & Hybrid)",
    desc: "Modern, cost-effective calling with call routing, voicemail, mobile integration, and more—configured to scale with you.",
    outcome: "Outcomes: clearer calls, lower costs",
    colorFrom: "from-teal-500",
    colorTo: "to-teal-600",
    icon: "phone",
    outcomeColor: "text-teal-400",
    details:
      "Deployments include on-prem, cloud, or hybrid PBX with SIP trunking, call analytics, redundancy, and handset/mobile provisioning.",
  },
  {
    title: "Cybersecurity & Compliance",
    desc: "Guard your business with layered defenses and practical governance. From firewalls to security training and compliance alignment.",
    outcome: "Outcomes: fewer vulnerabilities, audit-ready",
    colorFrom: "from-red-500",
    colorTo: "to-red-600",
    icon: "security",
    outcomeColor: "text-red-400",
    details:
      "Services include vulnerability scanning, endpoint protection, IAM, security awareness training, incident response planning and support for common compliance frameworks.",
  },
  {
    title: "Web Design & Email Hosting",
    desc: "Custom, responsive websites that look great and perform better—paired with fast, secure, fully managed hosting.",
    outcome: "Outcomes: credible online presence",
    colorFrom: "from-indigo-500",
    colorTo: "to-indigo-600",
    icon: "web",
    outcomeColor: "text-indigo-400",
    details:
      "Design, CMS integration, SEO basics, performance tuning, managed email with spam protection, and SLA-backed hosting options.",
  },
];

// add a centralized icon path map
const iconPaths = {
  consulting: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>`,
  support: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>`,
  network: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/>`,
  backup: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>`,
  phone: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>`,
  security: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
  web: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"/>`,
};
---

<section
  id="services"
  class="py-20 px-6 bg-gradient-to-b from-transparent to-blue-900/5"
>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        {heading}
        <span
          class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent"
          >{headingEm}</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">{subcopy}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        // updated map to include index and data attribute for JS hooks
        services.map((s, i) => (
          <div
            class="service-card group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300"
            data-idx={i}
            role="button"
            aria-haspopup="dialog"
            tabindex="0"
          >
            <div
              class={`w-12 h-12 bg-gradient-to-br ${s.colorFrom} ${s.colorTo} rounded-xl flex items-center justify-center mb-4`}
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={iconPaths[s.icon] ?? iconPaths.web}
              ></svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">{s.title}</h3>
            <p class="text-gray-400 mb-4">{s.desc}</p>
            <div class={`text-sm font-medium ${s.outcomeColor}`}>
              {s.outcome}
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Modal overlay (hidden by default) -->
  <div
    id="service-modal"
    class="hidden fixed inset-0 z-50 flex items-center justify-center p-6"
    role="dialog"
    aria-modal="true"
    aria-hidden="true"
    data-services={JSON.stringify(services)}
    data-iconpaths={JSON.stringify(iconPaths)}
    >
    <div
      id="service-modal-overlay"
      class="modal-overlay"
      data-modal-overlay
    ></div>

    <div
      id="service-modal-content"
      class="relative max-w-3xl w-full bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 z-50"
    >
        <div id="modal-top" class="flex items-center gap-4">
        <div id="modal-gradient" class="w-12 h-12 flex-shrink-0 bg-gradient-to-br rounded-xl flex items-center justify-center mb-0">
          <!-- icon injected by JS -->
        </div>
        <div class="flex-1">
          <h3 id="modal-title" class="text-2xl font-semibold"></h3>
        </div>
      </div>

      <div id="modal-details" class="mt-6 text-gray-300 leading-relaxed"></div>
    </div>

    <!-- serialize services for client -->
      <script>
        document.addEventListener('DOMContentLoaded', function () {
          /** @type {HTMLElement|null} */
          var overlayEl = document.getElementById('service-modal');
          if (!overlayEl) return;
          /** @type {HTMLElement} */
          var modal = overlayEl;
          var modalContent = document.getElementById('service-modal-content');

          // read JSON from data-* attributes on the modal
          /** @type {any} */
          var SERVICES = /** @type {any} */ ([]);
          /** @type {any} */
          var ICONPATHS = /** @type {any} */ ({});
          try {
            if (overlayEl.dataset && overlayEl.dataset.services) {
              SERVICES = JSON.parse(overlayEl.dataset.services);
            }
          } catch (e) {
            SERVICES = [];
          }
          try {
            if (overlayEl.dataset && overlayEl.dataset.iconpaths) {
              ICONPATHS = JSON.parse(overlayEl.dataset.iconpaths);
            }
          } catch (e) {
            ICONPATHS = {};
          }

          var titleElRaw = document.getElementById('modal-title');
          var detailsElRaw = document.getElementById('modal-details');
          var gradientElRaw = document.getElementById('modal-gradient');
          if (!titleElRaw || !detailsElRaw || !gradientElRaw) return;
          /** @type {HTMLElement} */
          var titleEl = titleElRaw;
          /** @type {HTMLElement} */
          var detailsEl = detailsElRaw;
          /** @type {HTMLElement} */
          var gradientEl = gradientElRaw;

          /**
           * @param {number|string} idx
           */
          function openModal(idx) {
            idx = Number(idx);
            var s = SERVICES[idx];
            if (!s) return;
            titleEl.textContent = s.title;
            detailsEl.textContent = s.details || '';
            gradientEl.className = 'w-12 h-12 bg-gradient-to-br ' + (s.colorFrom || '') + ' ' + (s.colorTo || '') + ' rounded-xl flex items-center justify-center mb-0';
            var innerPath = '';
            if (ICONPATHS) {
              var _map = ICONPATHS;
              if (s.icon && Object.prototype.hasOwnProperty.call(_map, s.icon)) {
                innerPath = _map[s.icon];
              } else if (Object.prototype.hasOwnProperty.call(_map, 'web')) {
                innerPath = _map['web'];
              } else {
                innerPath = '';
              }
            }
            gradientEl.innerHTML = '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">' + innerPath + '</svg>';
            
            var scrollbarWidth = window.innerWidth - document.documentElement.clientWidth;
            document.body.style.paddingRight = scrollbarWidth + 'px';
            var header = document.getElementById('main-header');
            if (header) {
              header.style.paddingRight = scrollbarWidth + 'px';
            }

            modal.classList.remove('hidden');
            modal.setAttribute('aria-hidden', 'false');
            document.body.style.overflow = 'hidden';
          }

          function closeModal() {
            modal.classList.add('hidden');
            modal.setAttribute('aria-hidden', 'true');
            document.body.style.overflow = '';
            document.body.style.paddingRight = '';
            var header = document.getElementById('main-header');
            if (header) {
              header.style.paddingRight = '';
            }
          }

          var rawCards = document.querySelectorAll('.service-card');
          for (var i = 0; i < rawCards.length; i++) {
            var maybeEl = rawCards.item(i);
            if (!(maybeEl instanceof HTMLElement)) continue;
            var card = maybeEl;
            card.addEventListener('click', function (ev) {
              openModal(this.dataset.idx);
            });
            card.addEventListener('keydown', function (ev) {
              if (ev && ev.key && (ev.key === 'Enter' || ev.key === ' ')) {
                ev.preventDefault();
                this.click();
              }
            });
          }

          // close when clicking anywhere on the modal (but not inside the content)
          if (modal) {
            modal.addEventListener('click', closeModal);
          }
          document.addEventListener('keydown', function (e) {
            if (e && e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
              closeModal();
            }
          });
        });
      </script>
  </div>
</section>
