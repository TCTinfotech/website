---
const heading = "Services that drive";
const headingEm = "outcomes";
const subcopy =
  "From strategic IT consulting to 24/7 monitoring, we deliver comprehensive technology solutions that keep your business running smoothly.";
const services = [
  {
    title: "IT Consulting",
    desc: "Make smart technology decisions with confidence. We assess your current environment, identify gaps, and craft a tailored IT strategy.",
    outcome: "Outcomes: lower risk, clearer roadmaps, better ROI",
    colorFrom: "from-blue-500",
    colorTo: "to-blue-600",
    icon: "consulting",
    outcomeColor: "text-blue-400",
  },
  {
    title: "Technical Support",
    desc: "Fast, reliable help that keeps people productive. From hardware and software troubleshooting to connectivity issues.",
    outcome: "Outcomes: less downtime, happier teams",
    colorFrom: "from-green-500",
    colorTo: "to-green-600",
    icon: "support",
    outcomeColor: "text-green-400",
  },
  {
    title: "Networking",
    desc: "Robust, secure wired and wireless networks built for performance and scale. We design, install, and maintain your network backbone.",
    outcome: "Outcomes: faster systems, stable uptime",
    colorFrom: "from-purple-500",
    colorTo: "to-purple-600",
    icon: "network",
    outcomeColor: "text-purple-400",
  },
  {
    title: "Business Continuity, Backup & Recovery",
    desc: "Be ready for anything. We implement and manage dependable backup and disaster recovery to protect data and minimize downtime.",
    outcome: "Outcomes: resilience, data integrity",
    colorFrom: "from-orange-500",
    colorTo: "to-orange-600",
    icon: "backup",
    outcomeColor: "text-orange-400",
  },
  {
    title: "Phone Systems (VoIP & Hybrid)",
    desc: "Modern, cost-effective calling with call routing, voicemail, mobile integration, and more—configured to scale with you.",
    outcome: "Outcomes: clearer calls, lower costs",
    colorFrom: "from-teal-500",
    colorTo: "to-teal-600",
    icon: "phone",
    outcomeColor: "text-teal-400",
  },
  {
    title: "Cybersecurity & Compliance",
    desc: "Guard your business with layered defenses and practical governance. From firewalls to security training and compliance alignment.",
    outcome: "Outcomes: fewer vulnerabilities, audit-ready",
    colorFrom: "from-red-500",
    colorTo: "to-red-600",
    icon: "security",
    outcomeColor: "text-red-400",
  },
  {
    title: "Web Design & Email Hosting",
    desc: "Custom, responsive websites that look great and perform better—paired with fast, secure, fully managed hosting.",
    outcome: "Outcomes: credible online presence",
    colorFrom: "from-indigo-500",
    colorTo: "to-indigo-600",
    icon: "web",
    outcomeColor: "text-indigo-400",
  },
];
---

<section
  id="services"
  class="py-20 px-6 bg-gradient-to-b from-transparent to-blue-900/5"
>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        {heading}
        <span
          class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent"
          >{headingEm}</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">{subcopy}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        services.map((s) => (
          <div class="group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
            <div
              class={`w-12 h-12 bg-gradient-to-br ${s.colorFrom} ${s.colorTo} rounded-xl flex items-center justify-center mb-4`}
            >
              {s.icon === "consulting" ? (
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                  />
                </svg>
              ) : s.icon === "support" ? (
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
                  />
                </svg>
              ) : s.icon === "network" ? (
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"
                  />
                </svg>
              ) : s.icon === "backup" ? (
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                  />
                </svg>
              ) : s.icon === "phone" ? (
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  />
                </svg>
              ) : s.icon === "security" ? (
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  />
                </svg>
              ) : (
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"
                  />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold mb-3">{s.title}</h3>
            <p class="text-gray-400 mb-4">{s.desc}</p>
            <div class={`text-sm font-medium ${s.outcomeColor}`}>
              {s.outcome}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
