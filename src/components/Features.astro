---
const heading = 'Why teams choose';
const headingBrand = 'TCT Infotech';
const subcopy = 'What you get: proactive support, smart strategy, and a senior engineering team that treats your business like its own. From everyday fixes to long-term architecture, we make IT simpler so you can focus on revenue, not roadblocks.';
const features = [
  { title: 'Business-first, not tech-first', desc: 'Every recommendation maps to your goalsâ€”efficiency, scale, or modernization. We focus on outcomes that matter to your bottom line.', icon: 'chart', colorFrom: 'from-blue-500', colorTo: 'to-blue-600' },
  { title: 'Engineers you can actually reach', desc: 'Responsive, friendly support on-site or remote; clear communication, no jargon. Real people who understand your business.', icon: 'chat', colorFrom: 'from-green-500', colorTo: 'to-green-600' },
  { title: 'Security and compliance built in', desc: 'Best practices and controls to help meet standards like HIPAA and PCI. We take security seriously so you can sleep well.', icon: 'lock', colorFrom: 'from-red-500', colorTo: 'to-red-600' },
  { title: 'Cost-effective by design', desc: 'Tailored support that eliminates waste, reduces downtime, and protects your margins. Smart investments, not endless expenses.', icon: 'cash', colorFrom: 'from-purple-500', colorTo: 'to-purple-600' },
];
---
<section id="features" class="py-20 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">{heading} <span class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">{headingBrand}</span></h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">{subcopy}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {features.map((f) => (
      <div class="group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
        <div class={`w-12 h-12 bg-gradient-to-br ${f.colorFrom} ${f.colorTo} rounded-xl flex items-center justify-center mb-4`}>
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            {f.icon === 'chart' ? (
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            ) : f.icon === 'chat' ? (
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
            ) : f.icon === 'lock' ? (
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            ) : (
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            )}
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">{f.title}</h3>
        <p class="text-gray-400">{f.desc}</p>
      </div>
      ))}
    </div>
  </div>
</section>
