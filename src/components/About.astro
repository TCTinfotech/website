---
const heading = 'Our';
const headingEm = 'Mission';
const mission = 'To empower businesses by solving their toughest IT challenges with expert skill, open communication, and a team that truly caresâ€”building lasting partnerships rooted in trust and innovation so you can focus on growth and impact.';
const features = [
  { title: 'Fewer tickets, faster resolutions', desc: 'More productive people with less IT friction.', colorFrom: 'from-blue-500', colorTo: 'to-blue-600' },
  { title: 'Less downtime', desc: 'Protected revenue and reputation.', colorFrom: 'from-green-500', colorTo: 'to-green-600' },
  { title: 'Tighter security & compliance', desc: 'Reduced risk and easier audits.', colorFrom: 'from-purple-500', colorTo: 'to-purple-600' },
  { title: 'Scalable foundations', desc: 'Expand confidently, without re-platforming every year.', colorFrom: 'from-orange-500', colorTo: 'to-orange-600' },
];
const cta = { label: 'Schedule Discovery Call', href: 'mailto:Info@tctinfotech.com' };
const dashboard = {
  title: 'IT Health Dashboard',
  statusText: 'All Systems Online',
  stats: [
    { value: '99.9%', label: 'Uptime', color: 'green-400' },
    { value: '45', label: 'Devices', color: 'blue-400' },
    { value: '24/7', label: 'Monitoring', color: 'purple-400' },
  ],
  items: [
  { label: 'Network Infrastructure', stat: '99.9% uptime', colorFrom: 'from-green-500', badge: 'green-400', badgeBg: 'bg-green-400', statText: 'text-green-400', itemBg: 'bg-green-900/20' },
  { label: 'Cloud Services', stat: 'Optimized', colorFrom: 'from-blue-500', badge: 'blue-400', badgeBg: 'bg-blue-400', statText: 'text-blue-400', itemBg: 'bg-blue-900/20' },
  { label: 'Security Status', stat: 'Protected', colorFrom: 'from-purple-500', badge: 'purple-400', badgeBg: 'bg-purple-400', statText: 'text-purple-400', itemBg: 'bg-purple-900/20' },
  ],
};
---

<section id="about" class="py-20 px-6 relative overflow-hidden">
  <div class="absolute top-0 right-0 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <h2 class="text-4xl md:text-5xl font-bold mb-6">{heading} <span class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">{headingEm}</span></h2>
        <p class="text-xl text-gray-400 mb-8 leading-relaxed">{mission}</p>

        <div class="space-y-6 mb-8">
          {features.map((f) => (
            <div class="flex items-start space-x-4">
              <div class={`w-8 h-8 bg-gradient-to-br ${f.colorFrom} ${f.colorTo} rounded-lg flex items-center justify-center flex-shrink-0 mt-1`}>
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-1">{f.title}</h3>
                <p class="text-gray-400">{f.desc}</p>
              </div>
            </div>
          ))}
        </div>
        <a href={cta.href} class="px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-full text-lg font-semibold transition-all duration-200 transform hover:scale-105">{cta.label}</a>
      </div>
      <div class="relative">
        <div class="bg-white/5 backdrop-blur-sm border border-white/20 rounded-3xl p-6 shadow-2xl">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold">IT Health Dashboard</h3>
            <div class="flex space-x-2">
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <span class="text-xs text-green-400">All Systems Online</span>
            </div>
          </div>
          <div class="space-y-4 mb-6">
            {dashboard.items.map((it) => (
              <div class={`flex items-center justify-between p-3 rounded-lg ${it.itemBg}`}>
                <div class="flex items-center space-x-3"><div class={`w-3 h-3 rounded-full ${it.badgeBg}`}></div><span class="text-sm">{it.label}</span></div>
                <span class={`text-xs ${it.statText}`}>{it.stat}</span>
              </div>
            ))}
          </div>
          <div class="grid grid-cols-3 gap-4">
            <div class="text-center"><div class="text-2xl font-bold text-green-400">99.9%</div><div class="text-sm text-gray-400">Uptime</div></div>
            <div class="text-center"><div class="text-2xl font-bold text-blue-400">45</div><div class="text-sm text-gray-400">Devices</div></div>
            <div class="text-center"><div class="text-2xl font-bold text-purple-400">24/7</div><div class="text-sm text-gray-400">Monitoring</div></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
